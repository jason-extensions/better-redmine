{
  "manifest_version": 3,
  "name": "Better Redmine",
  "version": "1.0",
  "description": "Better Redmine",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://redmine.twjoin.com/*"]
    }
  ]
}
